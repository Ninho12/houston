{
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.exclude": {
    "**/*.lock.json": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.tmp": true,
    "**/bin/**": true,
    "**/obj/**": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescriptHero.imports.multiLineTrailingComma": false,
  "typescriptHero.imports.organizeOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}

{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.exclude": {
    "**/*.lock.json": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.tmp": true,
    "**/bin/**": true,
    "**/obj/**": true,
    "node_modules": true,
    "**/**/*.js": {
      "when": "$(basename).ts"
    },
    "**/**/**.js": {
      "when": "$(basename).tsx"
    },
    "**/**/*.d.ts": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
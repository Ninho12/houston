{
  "compilerOptions": {
    "outDir": "./",
    "declaration": true,
    "declarationDir": "./",
    "module": "CommonJs",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "experimentalDecorators": true,
    "sourceMap": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["react"]
  },
  "exclude": ["node_modules", "*.d.ts", "**/**/*.d.ts", "**/**/*.d.ts", "docs/*"]
}

{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "module": "CommonJs",
    "target": "es5",
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/declarations/**/*.d.ts"],
  "exclude": ["node_modules", "src/*.d.ts", "src/components/*.d.ts", "src/decorations/*.d.ts"]
}

{
  "private": true,
  "name": "@eduzz/houston-workspaces",
  "workspaces": [
    "packages/*",
    "dev"
  ],
  "scripts": {
    "build": "yarn ultra -r -b build",
    "prestart": "yarn build",
    "start": "yarn ultra -r start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "(cd $(git rev-parse --show-toplevel) && bash scripts/pre-commit.sh)",
      "post-merge": "(cd $(git rev-parse --show-toplevel) && bash scripts/pre-commit.sh)"
    }
  },
  "devDependencies": {
    "husky": "4.3.0",
    "ultra-runner": "3.5.0"
  },
  "ultra": {
    "concurrent": [
      "pre-commit"
    ]
  }
}
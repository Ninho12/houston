{
  "private": true,
  "name": "@eduzz/houston-workspaces",
  "version": "0.10.1",
  "workspaces": [
    "packages/*",
    "dev"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn ultra -r -b build",
    "prestart": "yarn build",
    "start": "yarn ultra -r start",
    "publish": "sh ./scripts/publish-all.sh",
    "change-version": "sh ./scripts/change-version.sh",
    "clean": "git add . && git clean -f -x"
  },
  "devDependencies": {
    "husky": "5.1.1",
    "inquirer": "7.3.3",
    "ora": "5.3.0",
    "semver": "7.3.4",
    "typescript": "4.2",
    "ultra-runner": "3.9.0"
  },
  "ultra": {
    "concurrent": [
      "pre-commit"
    ]
  }
}

{
  "private": true,
  "name": "@eduzz/houston-workspaces",
  "version": "0.12.5",
  "workspaces": [
    "src/packages/*",
    "src"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "yarn ultra -r -b build",
    "build-docs": "(cd src && yarn build)",
    "prestart": "rm -rf ./src/.docz",
    "start": "(cd src && yarn start)",
    "prepare": "yarn husky install",
    "publish": "NPM_AUTH_TOKEN=$NPM_AUTH_TOKEN sh ./scripts/publish-all.sh",
    "change-version": "sh ./scripts/change-version.sh",
    "clean": "git add . && git clean -f -x",
    "lint": "yarn eslint \"./**/*.ts\" \"./**/*.tsx\" \"./**/*.mdx\"",
    "clean-install": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f yarn.lock && yarn install",
    "pre-commit": "concurrently -r \"yarn lint\" \"yarn ultra -r pre-commit\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-eslint-plugin": "2.3.0",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-mdx": "1.11.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unused-imports": "1.1.1",
    "@nejcm/docz-theme-extended": "2.0.12",
    "husky": "5.1.1",
    "inquirer": "7.3.3",
    "ora": "5.3.0",
    "prettier": "2.2.1",
    "semver": "7.3.4",
    "typescript": "4.2",
    "ultra-runner": "3.9.0",
    "concurrently": "6.0.1"
  },
  "resolutions": {
    "@babel/core": "7.13",
    "react": "16.13.1"
  },
  "ultra": {
    "concurrent": [
      "lint"
    ]
  }
}
